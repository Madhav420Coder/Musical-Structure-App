<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MaterialDesignTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>

        <!--Cool stuff-->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/slide_right</item>
        <item name="android:windowExitTransition">@android:transition/slide_left</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--   AlbumList CardView Style  -->
    <style name="AlbumListCardView">
        <item name="android:elevation">@dimen/elevation</item>
        <item name="android:layout_margin">@dimen/activity_margin</item>
        <item name="android:background">@color/colorBlack</item>
    </style>

    <!--   AlbumList Title Style  -->
    <style name="AlbumListTitle">
        <item name="android:paddingTop">@dimen/padding_albumTitleTop</item>
        <item name="android:paddingLeft">@dimen/padding_albumTitleLeft</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <!--   AlbumList Artist Style   -->
    <style name="AlbumListArtist">
        <item name="android:paddingLeft">@dimen/padding_albumArtistLeft</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!--   ListView Style  -->
    <style name="ListViewTemplate">
        <item name="android:layout_marginTop">@dimen/listView_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/listView_marginBottom</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--   GridView Style  -->
    <style name="GridViewTemplate">
        <item name="android:layout_marginTop">@dimen/gridView_marginTop</item>
        <item name="android:layout_marginBottom">@dimen/gridView_marginBottom</item>
        <item name="android:verticalSpacing">@dimen/verticalSpacing</item>
        <item name="android:horizontalSpacing">@dimen/horizontalSpacing</item>
        <item name="android:gravity">center</item>
    </style>

    <!--Now Playing CardViw Style-->
    <style name="NowPlayingTemplate">
        <item name="android:layout_marginTop">@dimen/nowPlaying_marginTop</item>
        <item name="android:layout_marginLeft">@dimen/nowPlaying_marginLeft</item>
        <item name="android:layout_marginRight">@dimen/nowPlaying_marginRight</item>
        <item name="android:elevation">4dp</item>
    </style>

</resources>